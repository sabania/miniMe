{
  "name": "minime",
  "version": "0.1.0",
  "description": "Autonomous WhatsApp to Claude Code Agent",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder --win --linux",
    "build:publish:win": "npm run build && electron-builder --win --publish always",
    "build:publish:linux": "npm run build && electron-builder --linux --publish always",
    "test": "vitest run"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.47",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "better-sqlite3": "^11.7.0",
    "electron-updater": "^6.3.9",
    "node-cron": "^4.2.1",
    "pino": "^10.3.1",
    "qrcode": "^1.5.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@tailwindcss/vite": "^4.1.8",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.19.1",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.18"
  }
}
